{% extends "layout.html" %}

{% block content %}
<div class="jumbotron text-center">
  <div class="container">
    <h1>Connect Four</h1>
  </div>
</div>
<div class="container">
  <div id="message" class="alert alert-info text-center" role="alert">
  </div>
  <hr>
  <div class="col-md-5">
      <div class="col-xs-6 placeholder">
        <button type="button" id="restart" class="btn btn-success btn-lg">Restart</button>
      </div>
      <div class="col-xs-6 placeholder">
        <input type="radio" name="vs" value="p2" id="vs_p2" checked> vs Player 2<br>
        <input type="radio" name="vs" value="pc" id="vs_pc"> vs Computer<br>
      </div>
  </div>
  <div class="col-md-7">
  {% for y in 5..0 %}
      <div class="row">
    <div class="col-md-12">
      <div class="row placeholders">
        {% for x in 0..6 %}
            <div class="col-xs-6 col-sm-1 placeholder circle circle-solid grey" data-x="{{ x }}" data-y="{{ y }}">
                <div class="circle-inner">
                    <div class="score-text">
                        
                    </div>
                </div>
           </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endfor %}
  </div>
</div>
{% endblock %}